<section>
  <div class="container border p5">
    <form class="pb-5" action="/todo" method="POST">
      <label class="form-label" for="fname">Neue Liste:</label>
      <div class="input-group">
        <button class="input-group-text"><i class="fa-solid fa-list-check"></i></button>
        <input class="form-control" type="text" id="todolist" name="todolist">
        <input id="todosubmit" class="btn btn-primary d-inline" type="submit" value="+">
      </div>
    </form>
    <div class="accordion accordion-flush bg-dark " id="accordionFlushExample">
      <div class="accordion-item">
        <h2 class="accordion-header" id="flush-headingOne">
