          <div class="accordion-body">
            <div class="pb-2">
              <form action="/" method="POST">
                <label class="form-label" for="fname">Neue Aufgabe:</label>
                <div class="input-group">
                  <input class="form-control" type="text" id="fname" name="fname">
                  <input id="todosubmit" class="btn btn-primary d-inline" type="submit" value="+">
                </div>
            </div>
            <div class="input-group">
              <input type="checkbox" class="btn-check" id="btn-check" autocomplete="off">
              <label class="btn btn-primary" for="btn-check"><i class="fa-regular fa-square"></i></label>
              <label class="form-control" for="fname"> ${todoContent}</label>
              <button type="submit" class="input-group-text"><i class="fa-solid fa-trash"></i></button>
            </div>
          </div>
        </div>
      </div>
    </div>
